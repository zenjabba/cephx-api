# API Configuration
API_V1_PREFIX=/api/v1
DEBUG=false
ENVIRONMENT=production

# Security - API Keys (format: key:name:permissions)
# Note: In production, use secure random keys and store in secure vault
API_KEYS='{"admin-key": {"name": "admin", "permissions": ["fs:read", "fs:write", "pool:read", "pool:write", "cluster:read"]}, "readonly-key": {"name": "readonly", "permissions": ["fs:read", "pool:read", "cluster:read"]}}'

# Ceph Configuration
CEPH_CONFIG_FILE=/etc/ceph/ceph.conf
CEPH_KEYRING=/etc/ceph/ceph.client.admin.keyring
CEPH_USER=admin
CEPH_COMMAND_TIMEOUT=30

# Filesystem Defaults
DEFAULT_CRUSH_RULE=replicated_mach2
DEFAULT_META_POOL_PG=16
DEFAULT_DATA_POOL_TYPE=replicated
DEFAULT_ENABLE_SNAPSHOTS=true

# Logging
LOG_LEVEL=INFO
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE=/var/log/cephx-api/audit.log
